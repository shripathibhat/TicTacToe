<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/text"
    android:background="#ffff00">

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/A1"
        android:layout_marginTop="85dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#33bcff" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/A2"
        android:layout_alignTop="@+id/A1"
        android:layout_toRightOf="@+id/A1"
        android:layout_toEndOf="@+id/A1"
        android:layout_marginLeft="70dp"
        android:background="#33bcff" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/A3"
        android:layout_alignTop="@+id/A2"
        android:layout_toRightOf="@+id/A2"
        android:layout_toEndOf="@+id/A2"
        android:layout_marginLeft="70dp"
        android:background="#33bcff" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/B1"
        android:layout_alignTop="@+id/B2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#33bcff" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/B2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/C2"
        android:layout_alignStart="@+id/C2"
        android:background="#33bcff" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/B3"
        android:layout_alignTop="@+id/B2"
        android:layout_alignLeft="@+id/A3"
        android:layout_alignStart="@+id/A3"
        android:background="#33bcff" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/C1"
        android:layout_below="@+id/B1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:background="#33bcff" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/C2"
        android:layout_alignTop="@+id/C1"
        android:layout_toRightOf="@+id/C1"
        android:layout_toEndOf="@+id/C1"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="20dp"
        android:background="#33bcff" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/C3"
        android:layout_alignTop="@+id/C2"
        android:layout_toRightOf="@+id/C2"
        android:layout_toEndOf="@+id/C2"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="20dp"
        android:background="#33bcff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/bNewGame"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ff00ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player 1"
        android:id="@+id/pl1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff00ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player 2"
        android:id="@+id/pl2"
        android:layout_alignBottom="@+id/pl1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff00ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/score1"
        android:layout_below="@+id/pl1"
        android:layout_alignRight="@+id/pl1"
        android:layout_alignEnd="@+id/pl1"
        android:background="#f0f0f0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/score2"
        android:layout_marginRight="50px"
        android:layout_below="@+id/pl2"
        android:layout_alignLeft="@+id/pl2"
        android:layout_alignStart="@+id/pl2"
        android:background="#f0f0f0" />

</RelativeLayout>
